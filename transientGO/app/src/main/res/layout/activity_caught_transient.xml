<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_caught_transient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.google.android.stardroid.activities.CaughtTransientActivity"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:text="Transient Caught!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/textView5"
                android:textSize="24sp" />

            <TextView
                android:text="ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/transientId"
                android:textSize="24sp" />

            <ImageView
                android:src="@drawable/common_google_signin_btn_icon_dark_focused"
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:id="@+id/picURL" />

            <ImageView
                android:src="@drawable/common_google_signin_btn_icon_dark_pressed"
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:id="@+id/lightURL" />

            <TextView
                android:text="RA: 0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/RA"
                android:gravity="center"
                android:textSize="24sp" />

            <TextView
                android:text="DEC: 0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/DEC"
                android:textSize="24sp" />

            <TextView
                android:text="MAG: 0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MAG"
                android:gravity="center"
                android:textSize="24sp" />

            <TextView
                android:text="0000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dateFound"
                android:gravity="center"
                android:textSize="18sp " />

            <TextView
                android:text="Score: 0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/score"
                android:textSize="24sp" />

            <Button
                android:text="Done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/doneButton"
                android:layout_weight="0.69" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
